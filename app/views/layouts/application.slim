doctype html
html
  head
    title
      = content_for?(:title) ? yield(:title) : "W E E D 3 0"
    meta charset="utf-8"
    = stylesheet_link_tag "application" 
    = javascript_include_tag "application"
    = csrf_meta_tags
  body
    div.row.topbar
      div.three.columns
        h5.white
          = link_to "WEED 三十", root_path
      div.nine.columns
        ul.link-list.right.white
          li
            = link_to "Home", root_path
          li
            = render_login_and_signup_link

    div.row
      div.ten.columns.push-two
        - flash.each do |name, msg| 
          - if msg.is_a?(String) 
            = content_tag :div, :class => "alert-box #{name}" do
              = msg.html_safe
        = yield

      div.two.columns.pull-ten
        - if user_signed_in?
          = gravatar_image_url current_user.email
        ul.side-nav
          li
            = link_to 'links', links_path
          li
            = link_to 'favorites', favorites_path
          li.divider
          li
            = link_to "new", new_link_path 

    footer.row
      div.twelve.columns
        hr
        div.row
          div.six.columns
            p &copy; Akita Foundation 2012
          div.six.columns
            ul.link-list.right
              li
                = link_to 'bookmarklet', "javascript:u=document.location.href;t=document.title; s=window.getSelection();void(window.open('#{APP_URL}/links/new?link[title]='+escape(t)+'&link[description]='+escape(s)+'&link[url]='+escape(u),'_blank','width=600,height=500,status=no,resizable=no,scrollbars=no,toolbar=no,menubar=no,location=no'));"
              li
                = link_to "keyboard", '#shortcus', onclick: "Mousetrap.trigger('shift+/');"
              li
                = link_to "github", '#'
              li
                = link_to "donate", '#'

    = render :partial => 'layouts/shortcuts'
  