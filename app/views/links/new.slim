doctype html
html
	= render :partial => 'layouts/head'
	body 
		ul.breadcrumbs
			li
				= link_to 'home', root_path, target: '_blank'
			li 
				= link_to 'links', links_path, target: '_blank'
			li.current
				span new

		div#new_link
			div.row
				div.ten.columns
					- flash.each do |name, msg|
					  - if msg.is_a?(String) 
					  	= content_tag :div, :class => "alert-box #{name}" do
					  		= msg.html_safe

			= form_for Link.new do |f|
				= f.hidden_field :render, value: :window
				div.row
					div.ten.columns
						= f.text_field :url, class: 'nine left', placeholder: 'url', value: params[:link] && params[:link]['url']
						= image_tag 'loading.gif', id: 'url_loading', class: 'left ml1 hide', width: 16

				div.row
					div.ten.columns
						= f.text_field :title, class: 'nine', placeholder: 'title', value: params[:link] && params[:link]['title']

				div.row
					div.ten.columns
						= f.text_field :tags, class: 'nine', value: nil, placeholder: 'tags (keywords seprated by comma)', value: params[:link] && params[:link]['tags']

				div.row
					div.ten.columns
						= f.text_area :description, class: 'nine', rows: 5, placeholder: 'description', value: params[:link] && params[:link]['description']

				div.row
					div.ten.columns
						= f.submit :Submit, class: 'radius button'